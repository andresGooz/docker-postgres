docker run -i -t --name postgres8 --volumes path --restart always -e POSTGRES_PASSWORD=admin -e TABLES_NAME=tabla1 -p 6551:5432 -d postgres/latest



para entrar:
docker exec -it postgres psql -U postgres
  psql:
    $ create database db0             creamos una base de datos llamada db0
    $ \l
    $ \c name_db         nos conectamos a la base de datos llamada name_db
    $ \q                      salir de la consola psql
